SCRIPT_PATH="${BASH_SOURCE[0]}"
SCRIPT_DIR="$(dirname "$SCRIPT_PATH")"

for file in "$SCRIPT_DIR"/modules/*; do
    [[ "$file" != "$SCRIPT_PATH" ]] && [ -f "$file" ] && . "$file"
done

case "$1" in
    # io
    aptud) apt "$@" ;;
    mcd|she) io "$@" ;;
    # laravel
    artisan) artisan "$@" ;;
    # nginx
    ngx) ngx "$@" ;;
    # bud
    update) git -C "$SCRIPT_DIR" pull origin main ;;
    # help
    *) bud_help ;;
esac
