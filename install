mkdir -p .config && cd .config

git clone https://github.com/smwgn1331/bud.git

LINE="bud() { . /home/$USER/.config/bud/bud \"\$@\"; }"
BASHRC="$HOME/.bashrc"

# Check if line already exists
if grep -Fxq "$LINE" "$BASHRC"; then
    echo "âœ… Already installed"
else
    echo "$LINE" >> "$BASHRC"
    echo "âœ… Installed successfuly"
fi

echo "ðŸ‘‰ Run: source ~/.bashrc or restart your terminal to apply it"
echo "ðŸ‘‰ Next: Type 'bud' (without quote) then hit Enter"
